<?xml version="1.0" encoding="UTF-8"?>
<configuration>
 
     <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
    <filter class="filters.MyFirstFilter" />

    <encoder>
      <pattern>
        %-4relative [%thread] %-5level %logger - %msg%n
      </pattern>
    </encoder>
  </appender>

  <root>
    <appender-ref ref="STDOUT" />
  </root>
 
 
</configuration>